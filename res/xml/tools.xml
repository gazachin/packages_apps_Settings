<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Circle app bar -->
    <PreferenceScreen
        android:key="app_circle_bar"
        android:fragment="com.android.settings.aicp.AppCircleBar"
        android:title="@string/app_circle_bar_title"/>

    <!-- App sidebar -->
    <PreferenceScreen
        android:key="app_sidebar"
        android:fragment="com.android.settings.aicp.AppSidebar"
        android:title="@string/app_sidebar_title"/>

     <!-- Extra Mods -->
    <PreferenceScreen
        android:key="various_shit"
        android:title="@string/various_shit_title"
        android:fragment="com.android.settings.aicp.VariousShit" />

    <!-- Gesture anywhere -->
    <PreferenceScreen
        android:key="gesture_anywhere"
        android:fragment="com.android.settings.aicp.gestureanywhere.GestureAnywhereSettings"
        android:title="@string/gesture_anywhere_title" />

    <!-- Heads up notifications -->
    <Preference
         android:key="heads_up_enabled"
         android:fragment="com.android.settings.aicp.HeadsUpSettings"
         android:title="@string/category_heads_up" />

    <!-- PIE Controls -->
    <PreferenceScreen
        android:key="pie_settings"
        android:fragment="com.android.settings.aicp.PieControl"
        android:title="@string/pie_control_title" />

</PreferenceScreen>
